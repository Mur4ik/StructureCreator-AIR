<mx:HBox xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx">

	<fx:Script>
		<![CDATA[
			protected function delete_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				dispatchEvent(new DataEvent(DataEvent.DATA, false,false, data.id.toString()));
			}
		]]>
	</fx:Script>
	
	<s:Label text="%" lineHeight="20" fontSize="15"  height="20" paddingTop="5" paddingLeft="5"/>
	<s:TextInput text="{data.variable}" id="variable" />
	
	<s:Label text="%" lineHeight="20" fontSize="15"  height="20" paddingTop="5"/>
	<mx:VRule height="25"/>
	<s:TextInput text="{data.value}" id="value" />
	
	<!--<s:CheckBox id="remember" />-->
	<s:Button id="delete" label="X" click="delete_clickHandler(event)"  width="30" chromeColor="#B50B0B" color="#000000"/>
</mx:HBox>
